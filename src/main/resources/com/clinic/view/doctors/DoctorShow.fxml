<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../../css/style.css"
    fx:controller="com.clinic.controllers.DoctorShowController">
    <fx:define>
        <ToggleGroup fx:id="statusPraktikgGroup" />
    </fx:define>
    <center>
        <VBox VBox.vgrow="ALWAYS">
            <children>
                <VBox styleClass="form-container" spacing="16">
                    <VBox.margin>
                        <Insets top="16" right="16" bottom="16" left="16" />
                    </VBox.margin>
                    <children>
                        <Label text="Detail Data Dokter" styleClass="form-title" />
                        <HBox spacing="32">
                            <children>
                                <VBox>
                                    <children>
                                        <ImageView fitHeight="200" fitWidth="200"
                                            pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../../images/default-profile.jpg" />
                                            </image>
                                        </ImageView>
                                    </children>
                                </VBox>
                                <HBox spacing="80">
                                    <children>
                                        <VBox spacing="16">
                                            <children>
                                                <VBox spacing="8">
                                                    <children>
                                                        <Label text="No SIP"
                                                            styleClass="label-title-show" />
                                                        <Label fx:id="noSipLabel"
                                                            styleClass="label-data-show" />
                                                    </children>
                                                </VBox>
                                                <VBox spacing="8">
                                                    <children>
                                                        <Label text="Nama Lengkap"
                                                            styleClass="label-title-show" />
                                                        <Label fx:id="namaLengkapLabel"
                                                            styleClass="label-data-show" />
                                                    </children>
                                                </VBox>
                                                <VBox spacing="8">
                                                    <children>
                                                        <Label text="Spesialisasi"
                                                            styleClass="label-title-show" />
                                                        <Label fx:id="spesialisasiLabel"
                                                            styleClass="label-data-show" />
                                                    </children>
                                                </VBox>
                                                <VBox spacing="8">
                                                    <children>
                                                        <Label text="No Telepon"
                                                            styleClass="label-title-show" />
                                                        <Label fx:id="noTeleponLabel"
                                                            styleClass="label-data-show" />
                                                    </children>
                                                </VBox>
                                            </children>
                                        </VBox>
                                        <VBox spacing="16">
                                            <children>
                                                <VBox spacing="8">
                                                    <children>
                                                        <Label text="Email"
                                                            styleClass="label-title-show" />
                                                        <Label fx:id="emailLabel"
                                                            styleClass="label-data-show" />
                                                    </children>
                                                </VBox>
                                                <VBox spacing="8">
                                                    <children>
                                                        <Label text="Alamat"
                                                            styleClass="label-title-show" />
                                                        <Label fx:id="alamatLabel"
                                                            styleClass="label-data-show" />
                                                    </children>
                                                </VBox>
                                                <VBox spacing="8">
                                                    <children>
                                                        <Label text="Tanggal Bergabung"
                                                            styleClass="label-title-show" />
                                                        <Label fx:id="tanggalBergabungLabel"
                                                            styleClass="label-data-show" />
                                                    </children>
                                                </VBox>
                                                <VBox spacing="8">
                                                    <children>
                                                        <Label text="Status Praktik"
                                                            styleClass="label-title-show" />
                                                        <Label fx:id="statusPraktikLabel"
                                                            styleClass="label-data-show" />
                                                    </children>
                                                </VBox>
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </center>
</BorderPane>