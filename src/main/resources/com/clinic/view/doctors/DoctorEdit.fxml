<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../../css/style.css" fx:controller="com.clinic.controllers.DoctorEditController">
    <fx:define>
        <ToggleGroup fx:id="statusPraktikgGroup"/>
    </fx:define>
    <left>
        <VBox alignment="TOP_CENTER" spacing="25.0" styleClass="sidebar">
            <padding>
                <Insets top="20.0" />
            </padding>
            <children>
                <ImageView fitHeight="32.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../images/default-profile.jpg" />
                    </image>
                </ImageView>
                <VBox alignment="TOP_CENTER" spacing="16.0">
                    <children>
                        <Button text="Dashboard" styleClass="sidebar-button" maxWidth="Infinity" onAction="#handleDashboardLinkAction"/>
                        <Button text="Pasien" styleClass="sidebar-button" maxWidth="Infinity" onAction="#handlePatientLinkAction"/>
                        <Button text="Dokter" styleClass="sidebar-button-active" maxWidth="Infinity" onAction="#handleDoctorLinkAction"/>
                        <Button text="Kunjungan" styleClass="sidebar-button" maxWidth="Infinity" onAction="#handleVisitLinkAction"/>
                        <Button text="Rekam Medis" styleClass="sidebar-button" maxWidth="Infinity" onAction="#handleMedicalRecordLinkAction"/>
                    </children>
                </VBox>
            </children>
        </VBox>
    </left>

    <center>
        <BorderPane>
            <top>
                <HBox alignment="CENTER_RIGHT" prefHeight="80.0" styleClass="header">
                <padding>
                    <Insets right="30.0" />
                </padding>
                <children>
                    <MenuButton styleClass="user-profile-button" text="" nodeOrientation="RIGHT_TO_LEFT">
                        <graphic>
                            <ImageView fitHeight="42.0" fitWidth="42.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../images/default-profile.jpg" />
                            </image>
                            <clip>
                                <Circle centerX="21.0" centerY="21.0" radius="21.0" />
                            </clip>
                            </ImageView>
                        </graphic>
                        <items>
                            <MenuItem text="Edit profile"/>
                            <MenuItem text="Sign out" onAction="#handleLogout"/>
                        </items>
                    </MenuButton>
                </children>
                </HBox>
            </top>
    
            <center>
                <VBox>
                    <children>                
                        <VBox styleClass="form-container" spacing="16">
                            <VBox.margin>
                                <Insets top="16" right="16" bottom="16" left="16"/>
                            </VBox.margin>
                            <children>
                                <Label text="Edit Data Dokter" styleClass="form-title"/>
                                <HBox spacing="32">
                                    <children>
                                        <VBox spacing="16">
                                            <children>
                                                <VBox spacing="8" alignment="CENTER_LEFT">
                                                    <HBox spacing="4" alignment="CENTER_LEFT">
                                                        <children>
                                                            <Label text="No SIP" styleClass="label-form"/>
                                                            <Label text="*"  styleClass="required-star"/>
                                                        </children>
                                                    </HBox>
                                                    <TextField fx:id="noSipField" promptText="Masukkan No SIP" styleClass="text-field"/>
                                                </VBox>

                                                <VBox spacing="8" alignment="CENTER_LEFT">
                                                    <HBox spacing="4" alignment="CENTER_LEFT">
                                                        <children>
                                                            <Label text="Nama Lengkap" styleClass="label-form"/>
                                                            <Label text="*"  styleClass="required-star"/>
                                                        </children>
                                                    </HBox>
                                                    <TextField fx:id="namaLengkapField" promptText="Masukkan Nama Lengkap" styleClass="text-field"/>
                                                </VBox>

                                                <VBox spacing="8" alignment="CENTER_LEFT">
                                                    <HBox spacing="4" alignment="CENTER_LEFT">
                                                        <children>
                                                            <Label text="Spesialisasi" styleClass="label-form"/>
                                                            <Label text="*"  styleClass="required-star"/>
                                                        </children>
                                                    </HBox>
                                                    <TextField fx:id="spesialisasiField" promptText="Masukkan Spesialisasi" styleClass="text-field"/>
                                                </VBox>

                                                <VBox spacing="8" alignment="CENTER_LEFT">
                                                    <HBox spacing="4" alignment="CENTER_LEFT">
                                                        <children>
                                                            <Label text="No Telepon" styleClass="label-form"/>
                                                            <Label text="*"  styleClass="required-star"/>
                                                        </children>
                                                    </HBox>
                                                    <TextField fx:id="noTeleponField" promptText="Masukkan No Telepon" styleClass="text-field"/>
                                                </VBox>
                                            </children>
                                        </VBox>
                                        <VBox spacing="16">
                                            <children>
                                                <VBox spacing="8" alignment="CENTER_LEFT">
                                                    <HBox spacing="4" alignment="CENTER_LEFT">
                                                        <children>
                                                            <Label text="Email" styleClass="label-form"/>
                                                            <Label text="*"  styleClass="required-star"/>
                                                        </children>
                                                    </HBox>
                                                    <TextField fx:id="emailField" promptText="Masukkan Email" styleClass="text-field"/>
                                                </VBox>

                                                <VBox spacing="8" alignment="CENTER_LEFT">
                                                    <HBox spacing="4" alignment="CENTER_LEFT">
                                                        <children>
                                                            <Label text="Alamat" styleClass="label-form"/>
                                                            <Label text="*"  styleClass="required-star"/>
                                                        </children>
                                                    </HBox>
                                                    <TextArea fx:id="alamatField" promptText="Masukkan Alamat" styleClass="text-area" prefHeight="80"/>
                                                </VBox>

                                                <VBox spacing="8" alignment="CENTER_LEFT">
                                                    <HBox spacing="4" alignment="CENTER_LEFT">
                                                        <children>
                                                            <Label text="Tanggal Bergabung" styleClass="label-form"/>
                                                            <Label text="*"  styleClass="required-star"/>
                                                        </children>
                                                    </HBox>
                                                    <DatePicker fx:id="tanggalBergabungPicker" promptText="MM/DD/YYYY" styleClass="date-picker"/>
                                                </VBox>

                                                <VBox spacing="8" alignment="CENTER_LEFT">
                                                    <HBox spacing="4" alignment="CENTER_LEFT">
                                                        <children>
                                                            <Label text="Status Praktik" styleClass="label-form"/>
                                                            <Label text="*"  styleClass="required-star"/>
                                                        </children>
                                                    </HBox>
                                                    <HBox spacing="16">
                                                        <VBox.margin>
                                                            <Insets right="8" />
                                                        </VBox.margin>
                                                        <RadioButton fx:id="aktifRadio" userData="Aktif" text="Aktif" styleClass="radio-button" toggleGroup="$statusPraktikgGroup"/>
                                                        <RadioButton fx:id="tidakAktifRadio" userData="Tidak Aktif" text="Tidak Aktif" styleClass="radio-button" toggleGroup="$statusPraktikgGroup"/>
                                                        <RadioButton fx:id="cutiRadio" userData="Cuti" text="Cuti" styleClass="radio-button" toggleGroup="$statusPraktikgGroup"/>
                                                    </HBox>
                                                </VBox>
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>

                                <HBox spacing="20" alignment="CENTER_RIGHT">
                                    <Button fx:id="cancel" text="Cancel" styleClass="secondary-button" onAction="#handleDoctorLinkAction"/>
                                    <Button fx:id="submitButton" text="Edit" styleClass="primary-button" onAction="#handleEditDoctor"/>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </center>
        </BorderPane>
    </center>
    
</BorderPane>