<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../css/style.css" fx:controller="com.clinic.controllers.DashboardController">

    <left>
        <VBox alignment="TOP_CENTER" spacing="25.0" styleClass="sidebar">
            <padding>
                <Insets top="20.0" />
            </padding>
            <children>
                <ImageView fitHeight="32.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/default-profile.jpg" />
                    </image>
                </ImageView>
                <VBox alignment="TOP_CENTER" spacing="16.0">
                    <children>
                        <Button text="Dashboard" styleClass="sidebar-button-active" maxWidth="Infinity"/>
                        <Button text="Pasien" styleClass="sidebar-button" maxWidth="Infinity" onAction="#handlePatientLinkAction"/>
                        <Button text="Dokter" styleClass="sidebar-button" maxWidth="Infinity" onAction="#handleDoctorLinkAction"/>
                        <Button text="Kunjungan" styleClass="sidebar-button" maxWidth="Infinity" onAction="#handleVisitLinkAction"/>
                        <Button text="Rekam Medis" styleClass="sidebar-button" maxWidth="Infinity" onAction="#handleMedicalRecordLinkAction"/>
                    </children>
                </VBox>
            </children>
        </VBox>
    </left>

    <center>
        <BorderPane>
            <top>
                <HBox alignment="CENTER_RIGHT" prefHeight="80.0" styleClass="header">
                <padding>
                    <Insets right="30.0" />
                </padding>
                <children>
                    <MenuButton styleClass="user-profile-button" text="" nodeOrientation="RIGHT_TO_LEFT">
                        <graphic>
                            <ImageView fitHeight="42.0" fitWidth="42.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@../images/default-profile.jpg" />
                                </image>
                                <clip>
                                    <Circle centerX="21.0" centerY="21.0" radius="21.0" />
                                </clip>
                            </ImageView>
                        </graphic>
                        <items>
                            <MenuItem text="Edit profile"/>
                            <MenuItem text="Sign out" onAction="#handleLogout"/>
                        </items>
                    </MenuButton>
                </children>
                </HBox>
            </top>
    
            <center>
                <VBox>
                    <children>
                        <VBox styleClass="form-container">
                            <VBox.margin>
                                <Insets top="16" right="16" bottom="16" left="16"/>
                            </VBox.margin>
                            <children>
                                <Label text="Dashboard" styleClass="header-title"/>
                                <HBox spacing="16">
                                    <VBox.margin>
                                        <Insets top="32"/>
                                    </VBox.margin>
                                    <children>                                
                                        <VBox styleClass="form-container" alignment="CENTER" spacing="16" >
                                            <children>
                                                <Label text="Jumlah pasien hari ini" styleClass="label-title-show"/>
                                                <Label fx:id="labelJumlahPasienHariIni" styleClass="label-data-show"/>
                                            </children>
                                        </VBox>
                                        <VBox styleClass="form-container" alignment="CENTER" spacing="16" >
                                            <children>
                                                <Label text="Jumlah kunjungan hari ini" styleClass="label-title-show"/>
                                                <Label fx:id="labelJumlahKunjunganHariIni" styleClass="label-data-show"/>
                                            </children>
                                        </VBox>
                                        <VBox styleClass="form-container" alignment="CENTER" spacing="16" >
                                            <children>
                                                <Label text="Pasien dalam antrian saat ini" styleClass="label-title-show"/>
                                                <Label fx:id="labelPasienDalamAntrian" styleClass="label-data-show"/>
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>
                                <HBox spacing="16">
                                    <VBox.margin>
                                        <Insets top="32"/>
                                    </VBox.margin>
                                    <children>                                
                                        <TableView fx:id="tableAntrian" styleClass="custom-table">
                                            <VBox.margin>
                                                <Insets left="16" right="16"/>
                                            </VBox.margin>
                                            <columns>
                                                <TableColumn fx:id="colNoAntrian" text="No Antrian" prefWidth="200" styleClass="no-table"/>
                                                <TableColumn fx:id="colNamaPasien" text="Nama Pasien" prefWidth="200" />
                                                <TableColumn fx:id="colNamaDokter" text="Nama Dokter" prefWidth="200" />
                                                <TableColumn fx:id="colStatusKunjungan" text="Status" prefWidth="200" />
                                            </columns>
                                        </TableView>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </center>
        </BorderPane>
    </center>
    
</BorderPane>