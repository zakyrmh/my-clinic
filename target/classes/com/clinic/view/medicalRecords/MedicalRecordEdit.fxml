<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../../css/style.css"
    fx:controller="com.clinic.controllers.MedicalRecordEditController">
    <center>
        <VBox VBox.vgrow="ALWAYS">
            <children>
                <VBox styleClass="form-container" spacing="16">
                    <VBox.margin>
                        <Insets top="16" right="16" bottom="16" left="16" />
                    </VBox.margin>
                    <children>
                        <Label text="Edit Data Rekam Medis" styleClass="form-title" />
                        <HBox spacing="32">
                            <children>
                                <VBox spacing="16">
                                    <children>
                                        <VBox spacing="8" alignment="CENTER_LEFT">
                                            <Label text="Anamnesis" styleClass="label-form" />
                                            <TextArea fx:id="anamnesisField"
                                                promptText="Masukkan Anamnesis" styleClass="text-area" />
                                        </VBox>
                                        <VBox spacing="8" alignment="CENTER_LEFT">
                                            <Label text="Pemeriksaan Fisik" styleClass="label-form" />
                                            <TextArea fx:id="pemeriksaanFisikField"
                                                promptText="Masukkan Pemeriksaan Fisik" styleClass="text-area" />
                                        </VBox>
                                        <VBox spacing="8" alignment="CENTER_LEFT">
                                            <Label text="Tekanan Darah" styleClass="label-form" />
                                            <TextField fx:id="tekananDarahField"
                                                promptText="Masukkan Tekanan Darah" styleClass="text-field" />
                                        </VBox>
                                        <VBox spacing="8" alignment="CENTER_LEFT">
                                            <Label text="Nadi" styleClass="label-form" />
                                            <TextField fx:id="nadiField"
                                                promptText="Masukkan Nadi" styleClass="text-field" />
                                        </VBox>
                                        <VBox spacing="8" alignment="CENTER_LEFT">
                                            <Label text="Suhu" styleClass="label-form" />
                                            <TextField fx:id="suhuField"
                                                promptText="Masukkan Suhu" styleClass="text-field" />
                                        </VBox>
                                    </children>
                                </VBox>
                                <VBox spacing="16">
                                    <children>
                                        <VBox spacing="8" alignment="CENTER_LEFT">
                                            <Label text="Respirasi" styleClass="label-form" />
                                            <TextField fx:id="respirasiField"
                                                promptText="Masukkan Respirasi" styleClass="text-field" />
                                        </VBox>
                                        <VBox spacing="8" alignment="CENTER_LEFT">
                                            <Label text="Berat Badan" styleClass="label-form" />
                                            <TextField fx:id="beratBadanField"
                                                promptText="Berat Badan dalam Kg" styleClass="text-field" />
                                        </VBox>
                                        <VBox spacing="8" alignment="CENTER_LEFT">
                                            <Label text="Tinggi Badan" styleClass="label-form" />
                                            <TextField fx:id="tinggiBadanField"
                                                promptText="Tinggi Badan dalam cm" styleClass="text-field" />
                                        </VBox>
                                        <VBox spacing="8" alignment="CENTER_LEFT">
                                            <Label text="Diagnosis Utama" styleClass="label-form" />
                                            <TextArea fx:id="diagnosisUtamaField"
                                                promptText="Masukkan Diagnosis Utama" styleClass="text-area" />
                                        </VBox>
                                    </children>
                                </VBox>
                                <VBox spacing="16">
                                    <children>
                                        <VBox spacing="8" alignment="CENTER_LEFT">
                                            <Label text="Diagnosis Sekunder" styleClass="label-form" />
                                            <TextArea fx:id="diagnosisSekunderField"
                                                promptText="Masukkan Diagnosis Sekunder" styleClass="text-area" />
                                        </VBox>
                                        <VBox spacing="8" alignment="CENTER_LEFT">
                                            <Label text="Tindakan" styleClass="label-form" />
                                            <TextArea fx:id="tindakanField"
                                                promptText="Masukkan Tindakan" styleClass="text-area" />
                                        </VBox>
                                        <VBox spacing="8" alignment="CENTER_LEFT">
                                            <Label text="Terapi" styleClass="label-form" />
                                            <TextArea fx:id="terapiField"
                                                promptText="Masukkan Terapi" styleClass="text-area" />
                                        </VBox>
                                        <VBox spacing="8" alignment="CENTER_LEFT">
                                            <Label text="Catatan Dokter" styleClass="label-form" />
                                            <TextArea fx:id="catatanDokterField"
                                                promptText="Masukkan Catatan Dokter" styleClass="text-area" />
                                        </VBox>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <HBox spacing="20" alignment="CENTER_RIGHT">
                            <Button fx:id="cancel" text="Cancel" styleClass="secondary-button"
                                onAction="#handleMedicalRecordLinkAction" />
                            <Button fx:id="submitButton" text="Edit" styleClass="primary-button"
                                onAction="#handleEditMedicalRecord" />
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </center>
</BorderPane>