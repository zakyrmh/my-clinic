<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../../css/style.css" fx:controller="com.clinic.controllers.PatientAddController">

    <left>
        <VBox alignment="TOP_CENTER" spacing="25.0" styleClass="sidebar">
            <padding>
                <Insets top="20.0" />
            </padding>
            <children>
                <ImageView fitHeight="32.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../images/default-profile.jpg" />
                    </image>
                </ImageView>
                <VBox alignment="TOP_CENTER" spacing="16.0">
                    <children>
                        <Button text="Dashboard" styleClass="sidebar-button" maxWidth="Infinity" onAction="#handleDashboardLinkAction"/>
                        <Button text="Patients" styleClass="sidebar-button-active" maxWidth="Infinity" onAction="#handlePatientLinkAction"/>
                        <Button text="Doctors" styleClass="sidebar-button" maxWidth="Infinity" onAction="#handleDoctorLinkAction"/>
                        <Button text="Medical Records" styleClass="sidebar-button" maxWidth="Infinity" onAction="#handleMedicalRecordLinkAction"/>
                        <Button text="Reports" styleClass="sidebar-button" maxWidth="Infinity"/>
                    </children>
                </VBox>
            </children>
        </VBox>
    </left>

    <center>
        <BorderPane>
            <top>
                <HBox alignment="CENTER_RIGHT" prefHeight="80.0" styleClass="header">
                <padding>
                    <Insets right="30.0" />
                </padding>
                <children>
                    <MenuButton styleClass="user-profile-button" text="" nodeOrientation="RIGHT_TO_LEFT">
                        <graphic>
                            <ImageView fitHeight="42.0" fitWidth="42.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../images/default-profile.jpg" />
                            </image>
                            <clip>
                                <Circle centerX="21.0" centerY="21.0" radius="21.0" />
                            </clip>
                            </ImageView>
                        </graphic>
                        <items>
                            <MenuItem text="Edit profile"/>
                            <MenuItem text="Sign out" onAction="#handleLogout"/>
                        </items>
                    </MenuButton>
                </children>
                </HBox>
            </top>
    
            <center>
                <VBox>
                    <children>                
                        <VBox styleClass="form-container" spacing="16">
                            <VBox.margin>
                                <Insets top="16" right="16" bottom="16" left="16"/>
                            </VBox.margin>
                            <children>
                                <Label text="Patient Registration Form" styleClass="form-title"/>
                                <!-- Nomor NIK -->
                                <HBox spacing="16" alignment="CENTER_LEFT">
                                    <Label text="NIK" styleClass="label-form"/>
                                    <TextField fx:id="identityNumberField" promptText="Enter Identity Number" styleClass="text-field"/>
                                </HBox>
                                <!-- Nama Lengkap -->
                                <HBox spacing="16" alignment="CENTER_LEFT">
                                    <Label text="Nama Lengkap" styleClass="label-form"/>
                                    <TextField fx:id="nameField" promptText="Enter Full Name" styleClass="text-field"/>
                                </HBox>
                                <!-- Jenis Kelamin -->
                                <HBox spacing="16" alignment="CENTER_LEFT">
                                    <Label text="Jenis Kelamin" styleClass="label-form"/>
                                    <HBox spacing="16">
                                        <VBox.margin>
                                            <Insets right="8" />
                                        </VBox.margin>
                                        <RadioButton fx:id="lakiLakiRadio" text="Laki-laki" styleClass="radio-button" toggleGroup="$jeniKelaminGroup"/>
                                        <RadioButton fx:id="perempuanRadio" text="Perempuan" styleClass="radio-button" toggleGroup="$jeniKelaminGroup"/>
                                    </HBox>
                                </HBox>
                                <!-- Tanggal lahir -->
                                <HBox spacing="16" alignment="CENTER_LEFT">
                                    <Label text="Tanggal Lahir" styleClass="label-form"/>
                                    <DatePicker fx:id="dateOfBirthPicker" promptText="Select Date" styleClass="date-picker"/>
                                </HBox>
                                <!-- Tempat Lahir -->
                                <HBox spacing="16" alignment="CENTER_LEFT">
                                    <Label text="Tempat Lahir" styleClass="label-form"/>
                                    <TextArea fx:id="addressField" promptText="Enter Address" styleClass="text-area" prefHeight="80"/>
                                </HBox>
                                <!-- Alamat -->
                                <HBox spacing="16" alignment="CENTER_LEFT">
                                    <Label text="Alamat" styleClass="label-form"/>
                                    <TextArea fx:id="addressField" promptText="Enter Address" styleClass="text-area" prefHeight="80"/>
                                </HBox>
                                <!-- No Telepon -->
                                <HBox spacing="16" alignment="CENTER_LEFT">
                                    <Label text="No Telepon" styleClass="label-form"/>
                                    <TextField fx:id="phoneField" promptText="Enter Phone Number" styleClass="text-field"/>
                                </HBox>
                                <!-- Email -->
                                <HBox spacing="16" alignment="CENTER_LEFT">
                                    <Label text="Email" styleClass="label-form"/>
                                    <TextField fx:id="phoneField" promptText="Enter Phone Number" styleClass="text-field"/>
                                </HBox>
                                <!-- Pekerjaan -->
                                <HBox spacing="16" alignment="CENTER_LEFT">
                                    <Label text="Pekerjaan" styleClass="label-form"/>
                                    <TextField fx:id="phoneField" promptText="Enter Phone Number" styleClass="text-field"/>
                                </HBox>

                                <HBox spacing="20" alignment="CENTER_RIGHT">
                                    <Button fx:id="cancel" text="Cancel" styleClass="secondary-button" onAction="#handlePatientLinkAction"/>
                                    <Button fx:id="submitButton" text="Save" styleClass="primary-button"/>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </center>
        </BorderPane>
    </center>
    
</BorderPane>